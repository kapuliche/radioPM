<body>
  <h1>ðŸ“» RADIO PM</h1>
  <p>Selecciona una canciÃ³n para escuchar</p>

  <audio id="player" controls autoplay></audio>

  <ul id="playlist"></ul>

  <script>
    const canciones = [
      "audio1.mp3",
      "audio2.mp3",
      "audio3.mp3",
      "audio4.mp3"
      // Agrega aquÃ­ mÃ¡s archivos si subes mÃ¡s
    ];

    const baseUrl = "https://kapuliche.github.io/radioPM/";
    const player = document.getElementById("player");
    const playlist = document.getElementById("playlist");
    let index = 0;

    function playSong(i) {
      index = i;
      player.src = baseUrl + canciones[i];
      player.play();
    }

    canciones.forEach((nombre, i) => {
      const li = document.createElement("li");
      li.textContent = "ðŸŽµ " + nombre;
      li.onclick = () => playSong(i);
      playlist.appendChild(li);
    });

    player.addEventListener("ended", () => {
      index = (index + 1) % canciones.length;
      playSong(index);
    });

    if (canciones.length > 0) playSong(0);
  </script>
